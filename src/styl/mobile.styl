global-reset()
@import 'variables'

body
  background-image: url('/images/background-gradient.png')
  background-size: cover
  height: 100%
  width: 100%
  position: fixed

header
  display: -webkit-flex
  display: flex
  height: 70px

  .title
    display: -webkit-flex
    display: flex
    width: 100%
    padding: 5px 10px 0 10px
    img
      max-width: 100%
      max-height: 70px
      width: auto
      height: auto
      z-index: 2

  .menu-icon
    width: 47px
    padding: 4px 10px
    cursor: pointer
    margin: 15px 10px 0 0

    div
      width: 35px
      height: 4px
      background: $yellow
      margin-bottom: 7px
      border-radius: 6px
      &:last-child
        margin: 0

.grid
  background-image: url('/images/background-grid.png')
  height: 100%
  width: 100%
  position: absolute
  z-index: -1
  top: 0
  opacity: 0.4

#canvas
  display: block
  opacity: 0.8
  margin-top: -10px

p
  font-family: $Start2P
  font-size: 22px
  color: $yellow
  line-height: 30px

.controls
  position: fixed
  bottom: 0
  color: #fe4528
  cursor: pointer
  user-select: none

  .arrow
    height: 72px
    position: absolute
    background: $controlsColor
    border-radius: 7px
    border: solid 2px $controlsColor

  svg
    height: 90px
    width: auto
    fill: $black

  .left-arrow
    right: 249px
    bottom: 0px

  .up-arrow
    right: 171px
    bottom: 0

  .right-arrow
    right: 94px
    bottom: 0px

  .space-bar
    right: 67px
    bottom: -87px
    width: 279px
    height: 72px
    position: absolute
    background: $black
    border-radius: 7px
    border: solid 2px $controlsColor

    svg
      fill: $controlsColor
      height: 75px
      position: absolute
      left: 107px
      top: 5px
