doctype html
html
  head
    link(rel='stylesheet', href='dist/desktop.css')
    link(rel='stylesheet', href="https://fonts.googleapis.com/css?family=Source+Code+Pro")

    script(src='node_modules/asteroids/keymaster/keymaster.min.js')
    script(src='node_modules/asteroids/moving_object.js')
    script(src='node_modules/asteroids/asteroids.js')
    script(src='node_modules/asteroids/bullet.js')
    script(src='node_modules/asteroids/ship.js')
    script(src='node_modules/asteroids/game.js')
  body
    .grid
    .game-container
      img.title( src="/images/blasteroids-logo.png")
      .row
        canvas#canvas( width="500", height="500")
        .side-description
          p
            | Blasteroids is a fun space shooter written in JavaScript and rendered using an HTML5 canvas.

          .more-projects
            a( href="http://d3rpz1lla.github.io", target="_blank" ) View More Projects
          h2 Credits
          ul.credits
            a( href="https://www.linkedin.com/in/sterlingforest", target="_blank" )
              li.credit
                .role Development
                .name Sterling F
            a( href="https://www.linkedin.com/in/outlinesvanish", target="_blank" )
              li.credit
                .role Design
                .name Jen S

      p.below-description
        | How to Play:
        br
        | Use the arrow keys to move.
        br
        | And the space-bar to shoot!
    script
      var canvas = document.querySelector( '#canvas' );
      var game = new window.Asteroids.Game( canvas.getContext("2d"), 500, 500 )
      game.start( window )
